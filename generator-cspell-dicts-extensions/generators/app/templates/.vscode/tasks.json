{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "npm: build",
            "type": "npm",
            "script": "build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$tsc"
        },
        {
            "label": "npm: clean-build",
            "type": "npm",
            "script": "clean-build",
            "problemMatcher": "$tsc"
        },
        {
            "label": "npm: test",
            "type": "npm",
            "script": "test",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "npm: watch",
            "type": "npm",
            "script": "watch",
            "problemMatcher": [
                "$tsc-watch"
            ]
        }
    ]
}
